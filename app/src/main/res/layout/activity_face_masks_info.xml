<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ctr_bg"
    tools:context=".face_masks_info">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme"

        >

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:maxLines="2"
            app:expandedTitleMarginBottom="50dp"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:title="Who should wear what kind of face masks?"
            android:id="@+id/collapsing_toolbar"
            app:titleTextAppearance="@style/CollapsedAppBar"
            android:background="@drawable/ctr_bg"
            >

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp"
                app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"
                app:layout_collapseMode="pin"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="10dp"
                app:lottie_autoPlay="true"
                app:lottie_rawRes="@raw/mask_please" />


            <TextView
                android:id="@+id/textViewph"
                android:layout_width="250dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:justificationMode="none"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:textStyle="italic"
                android:text="@string/maskinfo"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:paddingTop="40dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:background="@drawable/layout_bg"
        >
              <LinearLayout
                  android:layout_marginLeft="20sp"
                  android:layout_marginRight="20sp"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  >


                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="20dp"
                      android:layout_marginLeft="10dp"
                      android:text="Medical masks are recommended for:"
                      android:textColor="@color/colorAccent"
                      android:textSize="20sp"
                      android:textStyle="bold"/>

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:text="ðŸ˜· Health workers in clinical settings. See our guidance for more information on the use of personal protective equipment by health care workers."
                     android:justificationMode="inter_word"
                      android:textSize="16dp"
                      />
                  <TextView
                      android:layout_marginTop="20dp"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:justificationMode="inter_word"
                      android:text="ðŸ˜· Anyone who is feeling unwell, including people with mild symptoms, such as muscle aches, slight cough, sore throat or fatigue."
                      android:textSize="17dp"
                      />
                  <TextView
                      android:layout_marginTop="20dp"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:justificationMode="inter_word"
                      android:text="ðŸ˜· Anyone awaiting COVID-19 test results or who has tested positive."
                      android:textSize="17dp"
                      />
                  <TextView
                      android:layout_marginTop="20dp"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:justificationMode="inter_word"
                      android:text="ðŸ˜· People caring for someone who is a suspected or confirmed case of COVID-19 outside of health facilities."
                      android:textSize="17dp"
                      />

                  <TextView
                      android:layout_marginTop="20dp"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:textStyle="bold"
                      android:justificationMode="inter_word"
                      android:text="Medical masks are also recommended for the following groups, because they are at a higher risk of becoming seriously ill with COVID-19 and dying:"
                      android:textSize="17dp"
                      />

                  <TextView
                      android:layout_marginTop="20dp"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:justificationMode="inter_word"
                      android:text="ðŸ˜· People aged 60 or over."
                      android:textSize="17dp"
                      />



                  <TextView
                      android:layout_marginTop="20dp"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:justificationMode="inter_word"
                      android:text="ðŸ˜· People of any age with underlying health conditions, including chronic respiratory disease, cardiovascular disease, cancer, obesity, immunocompromised patients and diabetes mellitus."
                      android:textSize="17dp"
                      />

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="20dp"
                      android:layout_marginLeft="10dp"
                      android:text="Non-Medical masks are recommended for:"
                      android:textColor="@color/colorAccent"
                      android:textSize="20sp"
                      android:textStyle="bold"/>

                  <TextView
                      android:layout_marginTop="20dp"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:justificationMode="inter_word"
                      android:text="ðŸ˜· Non-medical, fabric masks can be used by the general public under the age of 60 and who do not have underlying health conditions."
                      android:textSize="17dp"
                      android:layout_marginBottom="30dp"
                      />
              </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</androidx.coordinatorlayout.widget.CoordinatorLayout>